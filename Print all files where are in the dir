#PRINTALLFILE.sh is designed to find and print contents of files and then output them into the specify folder 

#!/bin/bash

output_file="output_xxx.txt"
sudo find / -type d -name "xxx" | while read -r folder; do  # Traverse the folder named xxx
    sudo find "$folder" -type f | while read -r file; do    # Traverse all files in the folder named xxx
        sudo cat "$file" >> "$output_file"  # Output the contents of the file into the "output_xxx.txt"
        sudo echo "" >>  "$output_file"
    done
done


echo "output is in the $output_file now!"
